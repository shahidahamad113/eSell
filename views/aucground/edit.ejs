<%-  include("../partials/header") %>

<div class="container">
    <div class="row">
        <div class="page">
        <legend>Edit <%= aucground.name %></legend>
             <form action="/aucgrounds/<%= aucground._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <input class="form-control" type="text" name="aucground[name]" id="" value="<%= aucground.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="aucground[price]" id="" value="<%= aucground.price %>" min="0.01" step="0.01">
                </div>
                <div class="file-field input-field">
                    <div class="btn grey" class="form-group">
                      <span>File</span>
                      <input class="form-control" name="image" type="file">
                    </div>
                  </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="aucground[description]" id="" value="<%= aucground.description %>">
                </div>
        
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/aucgrounds">Go Back</a>
        </div>
    </div>
</div>
<%-  include("../partials/footer") %>