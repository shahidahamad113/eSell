<%-  include("../partials/header") %>

<div class="container">
    <div class="row">
       <div class="page">
        <legend>Upload Your Stuff Here</legend>
             <form action="/aucgrounds" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <select  name="category" list="category" class="form-control">
                      <option value="Select Your Category">Select Your Category...</option>
                      <option value="Books">Books</option>
                      <option value="Jewellery">Jewellery</option>
                      <option value="cars">cars</option>
                      <option value="mobile">mobile</option>
                      <option value="electronics">electronics</option>
                      <option value="Jewellery">Gadget</option>
                      </select>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="name" id="" placeholder="name" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="price" id="" placeholder="price" min="0.01" step="0.01" required>
                </div>
                <div class="choose_file" class="file-field input-field">
                    <div class="form-group">
                        <span>Choose File</span>
                    <input class="form-control" name="image" type="file" class="form-control">
                    </div>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="description" id="" placeholder="description" required>
                </div>
                <div class="form-group">
                    <button class="btn  btn-block">Submit</button>
                </div>
            </form>
            <a href="/aucgrounds">Go Back</a>
        </div>
    </div>
</div>
<%-  include("../partials/footer") %>