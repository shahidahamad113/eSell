<div class="container">
    <div class="row">
       <div class="page">
        <legend>Sign In</legend>
             <form action="/login" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="username" id="" placeholder="username" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="password" name="password" id="" placeholder="password" required>
                </div>
                <div class="form-group">
                    <button  class="btn btn-block" class="try">Login</button>
                </div>
                 <h4 style="margin-left: 83px;"><a href="/forgot">Forgot your password?</a></h4>
            </form>
        </div>
    </div>
</div>
